@model EHealthCare.Models.PatientViewModel
@{
    ViewBag.Title = "LaboratoryTest";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}
<style>
    .th-width {
        width: 15%;
    }
</style>
<div class="row">
    <div class="col-md-12">
        <div class="card card-topline-theme">
            <div class="card-head">
                <header><i class="fa fa-check-circle"></i> Laboratory Test</header>
                <div class="tools">
                    <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                </div>
            </div>
            <div class="card-body ">
                <table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle" id="example4">
                    <thead>
                        <tr>
                            <th class="center th-width">Patient Name </th>
                            <th class="center">Test Type </th>
                            <th class="center">Doctor Remarks </th>
                            <th class="center">Sent Date </th>
                            <th class="center">Status </th>
                            <th class="center">Action </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            foreach (var item in Model.ParientLabTestList)
                            {
                        <tr class="odd gradeX">
                            <td class="center">@item.Patient.FirstName</td>
                            <td class="center">@item.TestName</td>
                            <td class="center">@item.Remarks </td>
                            <td class="center">@string.Format("{0:dd/MM/yyyy}", item.TestDate)</td>
                            <td class="center">@item.Status</td>
                            <td class="center">
                                <a href="@item.Report" class="btn btn-secondary btn-xs" title="View Report File" target="_blank"><i class="fa fa-eye"></i></a>
                            </td>
                        </tr>
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

