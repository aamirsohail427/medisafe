@model EHealthCare.Models.PatientViewModel
@{
    ViewBag.Title = "Appointments";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-topline-theme">
            <div class="card-head">
                <header><i class="fa fa-book"></i> Appointments</header>
                <div class="tools">
                    <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                </div>
            </div>
            <div class="card-body ">
                <table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle" id="example4">
                    <thead>
                        <tr>
                            <th class="center">Patient Name </th>
                            <th class="center"> Doctor Name </th>
                            <th class="center"> Appointment Date </th>
                            <th class="center"> Appointment Start Time </th>
                            <th class="center"> Appointment End Time </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            if (Model.AppointmentList.Count > 0)
                            {
                                foreach (var item in Model.AppointmentList)
                                {
                                    <tr class="odd gradeX">
                                        <td class="center">@item.Patient.FirstName</td>
                                        <td class="center">@item.Doctor.LastName</td>
                                        <td class="center">@string.Format("{0:dd/MM/yyyy}", item.AppointmentDate)</td>
                                        <td class="center">@string.Format("{0:hh:mm}", item.ToTime)</td>
                                        <td class="center">@string.Format("{0:hh:mm}", item.FromTime)</td>
                                    </tr>
                                }
                            }
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
