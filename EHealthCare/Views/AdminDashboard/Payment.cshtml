@model EHealthCare.Models.AdminViewModel
@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int bill = 1;
}

<div class="row">
    <div class="col-md-12">
        <div class="card card-topline-theme">
            <div class="card-head">
                <header><i class="fa fa-dollar"></i> Payment</header>
                <div class="tools">
                    <a class="t-collapse btn-color fa fa-chevron-down" href="javascript:;"></a>
                </div>
            </div>
            <div class="card-body ">
                <table class="table table-striped table-bordered table-hover table-checkable order-column valign-middle" id="example4">
                    <thead>
                        <tr>
                            <th class="center"> Bill No </th>
                            <th class="center"> Patient Name</th>
                            <th class="center">Payment Date </th>
                            <th class="center"> Charges </th>
                            <th class="center"> Payment Status</th>
                            <th class="center"> Payment Method </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PaymentList)
                        {
                            <tr class="odd gradeX">
                                <td class="center">@bill</td>
                                <td class="center">@item.Patient.FirstName</td>
                                <td class="center">@item.PaymentDate</td>
                                <td class="center">@item.TotalPayment</td>
                                <td class="center">@item.PaymentStatus</td>
                                <td class="center">@item.PaymentType</td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

